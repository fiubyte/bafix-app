<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="43dp"
            android:src="@drawable/current_location_rectangle"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/maps_icon">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_location"
                android:fontFamily="@font/dm_sans_medium"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp">
            </TextView>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_finder_title"
        android:layout_marginTop="16dp"
        android:textSize="25sp"
        android:fontFamily="@font/dm_sans_bold"
        android:textColor="@color/title_color">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/filter_button_rectangle">
            </ImageView>

            <ImageView
                android:id="@+id/filters_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/filter_icon"
                android:layout_gravity="center">
            </ImageView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp">

            <ImageView
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:src="@drawable/order_button_rectangle">
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ordering_title"
                    android:fontFamily="@font/dm_sans_medium"
                    android:textColor="@color/title_color"
                    android:textSize="15dp"
                    android:layout_gravity="center">
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down_arrow_icon"
                    android:layout_marginLeft="2dp">
                </ImageView>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/serviceFinderRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layoutAnimation="@anim/layout_animation_fall_down"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/no_services_offered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aún no hay servicios ofrecidos."
        android:fontFamily="@font/dm_sans_medium"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"
        android:textColor="@color/title_color"
        android:visibility="gone">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/services_not_available_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background_error"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="15dp">

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Servicios no disponibles. Por favor, intenta de\n nuevo más tarde."
            android:textSize="14sp"
            android:layout_gravity="left"
            android:textColor="@color/text_error">

        </TextView>
    </androidx.cardview.widget.CardView>

</LinearLayout>